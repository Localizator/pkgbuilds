# Maintainer: localizator <localizator at ukr dot net>

pkgname=faience-theme
pkgver=0.5.3
pkgrel=1
pkgdesc="Faience is a Work In Progress that include GTK3, GTK2, Metacity and Gnome-Shell themes and an icon theme based on Faenza"
url="http://tiheum.deviantart.com/art/Gnome-Shell-Faience-255097456"
license=('GPL3')
arch=('any')
optdepends=('gnome-shell: Shell Theme'
            'gtk-engine-unico: GTK3 Theme'
            'gtk-engine-murrine: GTK2 Theme'
            'gnome-tweak-tool: Easy theme switcher')
source=("${pkgname}_${pkgver}.tar.gz::http://localizator.googlecode.com/files/${pkgname}_${pkgver}.tar.gz")
md5sums=('397675d3ce2c5cac273601e878137d3b')

package() {
  cd "${srcdir}/faience-theme-0.5"
  mkdir -p "${pkgdir}/usr/share/themes"
  cp -R Faience* "${pkgdir}/usr/share/themes/"
  find "${pkgdir}" -type d -print0 | xargs -0 chmod 755
  find "${pkgdir}" -type f -print0 | xargs -0 chmod 644
}
