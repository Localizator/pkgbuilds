# Maintainer: localizator <localizator at ukr dot net>

pkgname=potenza-icon-theme
pkgver=1.0.1
pkgrel=1
pkgdesc="A new wonderful iconset made by Mystras team"
url="http://mystras.cloudfactory.eu/index.php?mod=1_Downloads/User_Interface"
license=('GPL3')
arch=('any')
makedepends=()
options=(!strip)
source=("http://localizator.googlecode.com/files/Potenza.tar.gz")

package() {
	cd "${srcdir}"
	mkdir -p "${pkgdir}"/usr/share/icons
	cp -rf Potenza  "${pkgdir}"/usr/share/icons/
	chmod 755 -R "${pkgdir}"/usr/share/icons/Potenza/
}
md5sums=('c29caff6614a3e939bc3a95b9fdc4d6b')
