# Maintainer: Antonio Bonifacio <neuromancer85@gmail.com>
pkgname=holo-theme
pkgver=20120504
pkgrel=1
pkgdesc="Holo theme for gnome shell & gtk 3.4."
url="https://github.com/r3gis3r/Holo-Gnome3-Theme"
license=('GPL3')
arch=('any')
depends=('gnome-themes-standard' 'gtk-engine-unico' 'gtk-engine-murrine')
makedepends=('git')
_realname=Holo-Gnome3-Theme
_gitroot="git://github.com/r3gis3r/${_realname}.git"
_gitname="${_realname}"

build() {
  cd ${srcdir}

  msg "Connecting to GIT server...."

  if [ -d ${_gitname} ]; then
    cd ${_gitname} && git pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
}

package() {
    mv ${srcdir}/${_realname} ${srcdir}/Holo
    cd ${srcdir}
    mkdir -p $pkgdir/usr/share/themes/Holo
    mv Holo/{gnome-shell,gtk-3.0,gtk-2.0,metacity-1} $pkgdir/usr/share/themes/Holo
}
